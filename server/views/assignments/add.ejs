<%- include ../partials/header%> <!-- Include the header partial (EJS template) into the current page -->

<%- include ../partials/navbar%> <!-- Include the navigation bar partial (EJS template) into the current page -->

<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h1 class="title"><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="classTextField">Class</label>
                    <input type="text" class="form-control"
                    id="classTextField"
                    placeholder="Enter the name of the class for the assignment"
                    name="Class" required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="NameTextField"
                    placeholder="Enter the name of the assignment"
                    name="Name" required>
                </div>

                <div class="form-group">
                    <label for="StatusTextField">Status</label>
                    <input type="text" class="form-control"
                    id="StatusTextField"
                    placeholder="Enter the status of the assignment"
                    name="Status" required>
                </div>

                <div class="form-group">
                    <label for="DueTextArea">Due Date</label>
                    <input type="text" class="form-control"
                    id="DueTextArea"
                    placeholder="Enter the date the assignment is due"
                    name="Due" required>
                </div>
                <br>
                <div class="form-buttons">
                    <button type="submit" class="submit-button">
                        <i class="fas fa-edit"></i> Submit
                    </button>
                    <a href="/assignments-list" class="cancel-button">
                        <i class="fa-solid fa-ban"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
